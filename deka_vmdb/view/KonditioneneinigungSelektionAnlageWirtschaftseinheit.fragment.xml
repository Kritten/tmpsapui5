<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog 
		noDataText="{i18n>KEINE_DATEN_VORHANDEN}"
		title="{i18n>KOND_SEL_ANLAGE_WIRTSCHAFTSEINHEIT_TITLE}"
		search="onWirtschaftseinheitDialogSearch"
		confirm="onWirtschaftseinheitDialogConfirm"
		items="{form>/wirtschaftseinheiten}" >

		<columns>
			<Column>
				<header>
					<Text text="{i18n>KOND_SEL_ANLAGE_WIRTSCHAFTSEINHEIT_COL_BUCHUNGSKREIS}" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>KOND_SEL_ANLAGE_WIRTSCHAFTSEINHEIT_COL_WIRTSCHAFTSEINHEIT}" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>KOND_SEL_ANLAGE_WIRTSCHAFTSEINHEIT_COL_BESCHREIBUNG}" />
				</header>
			</Column>
		</columns>
		
		<ColumnListItem>
			<cells>
				<Text text="{form>Bukrs}" />
				<Text text="{form>WeId}" />
				<Text text="{form>Plz} {form>Ort} {form>StrHnum}" />
			</cells>
		</ColumnListItem>

	</TableSelectDialog>
</core:FragmentDefinition>