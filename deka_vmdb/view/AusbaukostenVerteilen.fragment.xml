<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    
    <Dialog title="{i18n>AUSBAUKOSTEN_VERTEILEN}">
    
        <content>
            
            <f:SimpleForm>
                <f:content>
                    <Label text="{i18n>NUTZUNGSART}" />
                    <Select selectedKey="{/nutzungsart}" items="{/nutzungsarten}">
                        <items>
                            <core:Item key="{key}" text="{text}" />
                        </items>
                    </Select>
                    <Label text="{i18n>GRUNDAUSBAUKOSTEN} in {form>/viewsettings/waehrungSelected/text} / {form>/viewsettings/flaecheneinheitSelected/text}" />
                    <Input value="{/grundausbaukosten}" />
                    <Label text="{i18n>MIETERAUSBAUKOSTEN} in {form>/viewsettings/waehrungSelected/text} / {form>/viewsettings/flaecheneinheitSelected/text}" />
                    <Input value="{/mietausbaukosten}" />
                </f:content>
            </f:SimpleForm>
            
            
        </content>
        
        <buttons>
            <Button text="{i18n>VERTEILEN}" type="Accept" press="onAusbaukostenVerteilenFragmentAkzeptierenButtonPress" />
            <Button text="{i18n>ABBRECHEN}" type="Reject" press="onAusbaukostenVerteilenFragmentAbbrechenButtonPress"/>
        </buttons>
        
    </Dialog>
    
</core:FragmentDefinition>