<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		noDataText="{i18n>KEINE_DATEN_VORHANDEN}"
		title="{i18n>WIRTSCHAFTSEINHEITEN}"
		search="onKleinvermietungSelectDialogSearch"
		confirm="onKleinvermietungSelectDialogConfirm"
		items="{selektionsModel>/data}"
		multiSelect="false" >
		
		<columns>
			<Column>
				<header>
					<Text text="{i18n>ID}" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>BUCHUNGSKREIS}" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>ORT}" />
				</header>
			</Column>
		</columns>
		
		<ColumnListItem>
			<cells>
				<Text text="{selektionsModel>WeId}" />
				<Text text="{selektionsModel>Bukrs}" />
				<Text text="{selektionsModel>StrHnum}, {selektionsModel>Plz} {selektionsModel>Ort}" />
			</cells>
		</ColumnListItem>

	</TableSelectDialog>
</core:FragmentDefinition>