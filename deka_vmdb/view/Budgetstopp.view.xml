<core:View 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	controllerName="ag.bpc.Deka.controller.Budgetstopp" 
	xmlns:html="http://www.w3.org/1999/xhtml">

	<Page title="Budgetstopp (Fonds-Genehmigung zurÃ¼ckziehen)"  class="sapUiFioriObjectPage" showNavButton="true" navButtonPress="onBack">
	
		<content>
            
            <FlexBox class="sapUiSmallMargin">
                <items>
                    <Select id="idSelectFond" items="{form>/fonds}" change="onFondSelektionChange" selectedKey="{form>/selectedFondKey}" forceSelection="false" autoAdjustWidth="true">
                        <items>
                            <core:Item key="{form>Dmfonds}" text="{form>Dmfonds}" />
                        </items>
                    </Select>
                </items>
            </FlexBox>
    
            <Table id="konditioneneinigungenTable" mode="MultiSelect" items="{form>/konditioneneinigungen}">
                
                <headerToolbar>
                    <Toolbar>
                        <Title text="{i18n>BETROFFENE_KONDITIONENEINIGUNGEN}" level="H2"/>
                    </Toolbar>
                </headerToolbar>
                
                <columns>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>ID}" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>MIETBEGINN}" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>LAUFZEIT} {i18n>IN_MONATEN}" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="{i18n>GUELTIG_BIS}" />
                    </Column>
                </columns>
                
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Text text="{form>KeId}" />
                            <Text text="{
                                    path: 'form>Mietbeginn',
                                    type: 'sap.ui.model.type.Date',
                                    formatOptions: {
                                        style: 'short'
                                    }
                            }" />
                            <Text text="{form>LzFirstbreak}" />
                            <Text text="{
                                    path: 'form>GueltigkKe',
                                    type: 'sap.ui.model.type.Date',
                                    formatOptions: {
                                        style: 'short'
                                    }
                            }" />
                        </cells>
                    </ColumnListItem>
                    
                </items>
				
            </Table>

            <FlexBox class="sapUiSmallMargin" justifyContent="End" >
                <items>
					<Button text="{i18n>GENEHMIGUNG_ZURUECKZIEHEN}" icon="sap-icon://undo" press="onGenehmigungZurueckziehenButtonPress" class="sapUiSmallMarginEnd" />
					<Button text="{i18n>DRUCKEN}" icon="sap-icon://print" press="onDruckenButtonPress" />                
                </items>
            </FlexBox>

		</content>
	
	</Page>
	
	
</core:View>