<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		noDataText="{i18n>KEINE_DATEN_VORHANDEN}"
		title="{i18n>AUSWAEHLEN}"
		search="onSelectDialogSearch"
		confirm="onSelectDialogConfirm"
		items="{selektionsModel>/data}"
		multiSelect="true" >
		
		<columns>
			<Column>
				<header>
					<Text text="{i18n>ID}" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>BUCHUNGSKREIS}" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>MIETBEGINN}" />
				</header>
			</Column>
		</columns>
		
		<ColumnListItem>
			<cells>
				<Text text="{selektionsModel>KeId}" />
				<Text text="{selektionsModel>Bukrs}" />
				<Text text="{
					path: 'selektionsModel>Mietbeginn', 
					type: 'sap.ui.model.type.Date', 
					formatOptions: { 
						style: 'short' 
					} 
				}" />
			</cells>
		</ColumnListItem>

	</TableSelectDialog>
</core:FragmentDefinition>