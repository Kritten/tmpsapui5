<core:View 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="ag.bpc.Deka.controller.KonditioneneinigungSelektion">
	
	<Page title="Konditioneneinigung (Selektion)" showNavButton="true" navButtonPress="onBack" class="sapUiFioriObjectPage">
		<content>

			<Panel>
				<headerToolbar>
					<Toolbar>
						<Title level="H3" text="{i18n>KOND_SEL_PANEL_TITLE_ANL}" />
					</Toolbar>
				</headerToolbar>

				<FlexBox>
					<items>
					
						<FlexBox justifyContent="Start">
							<items>
								<RadioButtonGroup id="RBG_Anlage" columns="3">
									<buttons>
										<RadioButton text="{i18n>KOND_SEL_RBG_O1}" />
										<RadioButton text="{i18n>KOND_SEL_RBG_O2}" />
										<RadioButton text="{i18n>KOND_SEL_RBG_O3}" />
									</buttons>
								</RadioButtonGroup>
							</items>

							<layoutData>
								<FlexItemData growFactor="1" />
							</layoutData>
						</FlexBox>

						<FlexBox justifyContent="End" alignItems="End">
							<items>
								<Button text="{i18n>ANLEGEN}" press="onAnlegenPress" />
							</items>

							<layoutData>
								<FlexItemData growFactor="1" />
							</layoutData>
						</FlexBox>

					</items>
				</FlexBox>
			</Panel>

			<Panel class="sapUiDemoFlexBoxSizeAdjustments">
				<headerToolbar>
					<Toolbar>
						<Title level="H3" text="{i18n>KOND_SEL_PANEL_TITLE_AUS}" />
					</Toolbar>
				</headerToolbar>

				
				<FacetFilter id="idFacetFilter" reset="onFacetFilterReset" lists="{kondSel>/facetfilters}" type="Simple" >
					<lists>
						<FacetFilterList title="{kondSel>filterName}" items="{path: 'kondSel>values', templateShareable: true }" listClose="onFacetFilterListClose" >
							<items>
								<FacetFilterItem key="{kondSel>key}" text="{kondSel>text}" />
							</items>
						</FacetFilterList>
					</lists>
				</FacetFilter>

				<Table id="idKondSelTable" inset="false" itemPress="onItemPress" items="{kondSel>/data}">
					<headerToolbar>
						<Toolbar>
							<Title text="{i18n>KONDITIONENEINIGUNGEN}" level="H4" />
						</Toolbar>
					</headerToolbar>
					<columns>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>FAVORIT}" />
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>ID}" />
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>MIETBEGINN}" />
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>LAUFZEIT} {i18n>IN_MONATEN}" />
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>GUELTIG_BIS}" />
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>HAUPTNUTZFLAECHE}" />
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>ANGEBOTSMIETE}" />
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>GRUNDAUSBAUKOSTEN}" />
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>MIETERAUSBAUKOSTEN}" />
						</Column>
					</columns>

					<items>
						<ColumnListItem type="Navigation">
							<cells>
								<core:Icon src="{= (${kondSel>Favorit} === true) ? 'sap-icon://favorite' : 'sap-icon://unfavorite' }" />
								
								<Text text="{kondSel>KeId}" />
								<Text text="{
										path: 'kondSel>Mietbeginn',
										type: 'sap.ui.model.type.Date',
										formatOptions: {
											style: 'short'
										}
								}" />
								<Text text="{kondSel>LzFirstbreak}" />	
								<Text text="{
										path: 'kondSel>GueltigkKe',
										type: 'sap.ui.model.type.Date',
										formatOptions: {
											style: 'short'
										}
								}" />
								<Text text="{
										path: 'kondSel>Hnfl',
										type: 'sap.ui.model.type.Float',
										formatOptions: {
											minIntegerDigits : 2, 
											minFractionDigits : 2, 
											groupingEnabled : true, 
											groupingSeparator : '.', 
											decimalSeparator : ',' 
										}
								} {kondSel>Unit}" />
								<Text text="{
										path: 'kondSel>AnMiete',
										type: 'sap.ui.model.type.Float',
										formatOptions: {
											minIntegerDigits : 2, 
											minFractionDigits : 2, 
											groupingEnabled : true, 
											groupingSeparator : '.', 
											decimalSeparator : ',' 
										}
								} {kondSel>Currency}" />
								<Text text="{
										path: 'kondSel>GaKosten',
										type: 'sap.ui.model.type.Float',
										formatOptions: {
											minIntegerDigits : 2, 
											minFractionDigits : 2, 
											groupingEnabled : true, 
											groupingSeparator : '.', 
											decimalSeparator : ',' 
										}
								} {kondSel>Currency}" />
								<Text text="{
										path: 'kondSel>MaKosten',
										type: 'sap.ui.model.type.Float',
										formatOptions: {
											minIntegerDigits : 2, 
											minFractionDigits : 2, 
											groupingEnabled : true, 
											groupingSeparator : '.', 
											decimalSeparator : ',' 
										}
								} {kondSel>Currency}" />
								
							</cells>
						</ColumnListItem>
					</items>
				</Table>

			</Panel>


		</content>
	</Page>
</core:View>