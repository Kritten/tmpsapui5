<core:View 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="ag.bpc.Deka.controller.KonditioneneinigungSelektion">
	
	<Page title="Konditioneneinigung (Selektion)" showNavButton="true" navButtonPress="onBack" class="sapUiFioriObjectPage">
		<content>

			<Panel class="sapUiDemoFlexBoxSizeAdjustments">
				<headerToolbar>
					<Toolbar>
						<Title level="H3" text="{i18n>KOND_SEL_PANEL_TITLE_ANL}" />
					</Toolbar>
				</headerToolbar>
				<FlexBox alignItems="Start" justifyContent="Start">
					<items>
						<RadioButtonGroup id = "RBG_Anlage">
							<buttons>
								<RadioButton text="{i18n>KOND_SEL_RBG_O1}" />
								<RadioButton text="{i18n>KOND_SEL_RBG_O2}" />
							</buttons>
						</RadioButtonGroup>
						<Button text="{i18n>KOND_SEL_BTN_ANL}" press="onAnlegenPress" />
					</items>
				</FlexBox>
			</Panel>

			<Panel class="sapUiDemoFlexBoxSizeAdjustments">
				<headerToolbar>
					<Toolbar>
						<Title level="H3" text="{i18n>KOND_SEL_PANEL_TITLE_AUS}" />
					</Toolbar>
				</headerToolbar>

				<ComboBox id = "cb_work" selectedKey = "work" selectionChange = "onComboBoxChange">
					<items>
						<core:Item key="work" text="{i18n>KOND_SEL_DD_WORK}" />
						<core:Item key="all" text="{i18n>KOND_SEL_DD_ALL}" />
					</items>
				</ComboBox>
				
				<FacetFilter id="idFacetFilter" reset="onFacetFilterReset" lists="{kondSel>/facetfilters}" type="Simple" >
					<lists>
						<FacetFilterList title="{kondSel>filterName}" items="{kondSel>values}" multiselect="true" listClose="onFacetFilterListClose" >
							<items>
								<FacetFilterItem text="{kondSel>text}" key="{kondSel>key}" />
							</items>
						</FacetFilterList>
					</lists>
				</FacetFilter>
				
				<Table id="idKondSelTable" inset="false" itemPress="onItemPress" items="{ path: 'kondSel>/data' }">
					<headerToolbar>
						<Toolbar>
							<Title text="{i18n>KOND_SEL_TAB_TITLE}" level="H4" />
						</Toolbar>
					</headerToolbar>
					<columns>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>KOND_SEL_TAB_FAV}" />
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>KOND_SEL_TAB_ID}" />
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>KOND_SEL_TAB_MB}" />
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>KOND_SEL_TAB_LZ}" />
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>KOND_SEL_TAB_GB}" />
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>KOND_SEL_TAB_MF}" />
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>KOND_SEL_TAB_BZ}" />
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>KOND_SEL_TAB_NA}" />
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>KOND_SEL_TAB_HF}" />
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>KOND_SEL_TAB_AM}" />
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>KOND_SEL_TAB_GA}" />
						</Column>
						<Column minScreenWidth="Tablet">
							<Text text="{i18n>KOND_SEL_TAB_MA}" />
						</Column>
					</columns>

					<items>
						<ColumnListItem type="Navigation">
							<cells>
								<core:Icon src="{= (${kondSel>favorit} === true) ? 'sap-icon://favorite' : 'sap-icon://unfavorite' }" />
								
								
								<Text text="{kondSel>id}" />
								<Text text="{kondSel>mietbegin}" />
								<Text text="{
										path: 'kondSel>laufzeit',
										type: 'sap.ui.model.type.Integer',
										formatOptions: {
											maxIntegerDigits: 5
										}
								}" />	
								<Text text="{
										path: 'kondSel>gueltig_bis',
										type: 'sap.ui.model.type.Date',
										formatOptions: {
											style: 'short'
										}
								}" />
								<Text text="{kondSel>mietflaeche}" />
								<Text text="{kondSel>bezeichnung}" />
								<Text text="{kondSel>nutzungsart}" />
								<Text text="{
										path: 'kondSel>hauptnutzfl',
										type: 'sap.ui.model.type.Float',
										formatOptions: {
											minIntegerDigits : 2, 
											minFractionDigits : 2, 
											groupingEnabled : true, 
											groupingSeparator : '.', 
											decimalSeparator : ',' 
										}
								}" />
								<Text text="{
										path: 'kondSel>angebotsmiete',
										type: 'sap.ui.model.type.Float',
										formatOptions: {
											minIntegerDigits : 2, 
											minFractionDigits : 2, 
											groupingEnabled : true, 
											groupingSeparator : '.', 
											decimalSeparator : ',' 
										}
								}" />
								<Text text="{
										path: 'kondSel>grundausbau',
										type: 'sap.ui.model.type.Float',
										formatOptions: {
											minIntegerDigits : 2, 
											minFractionDigits : 2, 
											groupingEnabled : true, 
											groupingSeparator : '.', 
											decimalSeparator : ',' 
										}
								}" />
								<Text text="{
										path: 'kondSel>mieterausbau',
										type: 'sap.ui.model.type.Float',
										formatOptions: {
											minIntegerDigits : 2, 
											minFractionDigits : 2, 
											groupingEnabled : true, 
											groupingSeparator : '.', 
											decimalSeparator : ',' 
										}
								}" />
								
							</cells>
						</ColumnListItem>
					</items>
				</Table>

			</Panel>


		</content>
	</Page>
</core:View>