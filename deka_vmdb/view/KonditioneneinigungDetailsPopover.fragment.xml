<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">

    <!-- contentMinWidth since 1.36 -->
    <Popover title="Anzeigeeinstellungen" placement="Bottom" class="sapUiContentPadding">

    <content>

        <FlexBox
            direction="Column"
            alignItems="Start"
            class="sapUiSmallMarginBottom"
            width="100%">
            <items>
                <Label text="Mietflächenangaben:" />
                <Select selectedKey="{form>/_zeitspanneSelectedKey}" items="{form>/zeitspannen}" change="onPopoverZeitspanneSelect">
                    <core:Item key="{form>key}" text="{form>text}" />
                </Select>           
            </items>
        </FlexBox>


        <FlexBox
            direction="Column"
            alignItems="Start"
            width="100%">
            <items>
                <Label text="Währung:" />
                <Select selectedKey="{form>/_waehrungSelectedKey}" items="{form>/waehrungen}" change="onPopoverWaehrungSelect">
                    <core:Item key="{form>key}" text="{form>text}" />
                </Select>
            </items>
        </FlexBox>

    </content>




        
    </Popover>
</core:FragmentDefinition>