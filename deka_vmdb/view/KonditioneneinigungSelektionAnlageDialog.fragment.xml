<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog 
		noDataText="{i18n>KEINE_DATEN_VORHANDEN}"
		title="{i18n>AUSWAEHLEN}"
		search="onSelectDialogSearch"
		confirm="onSelectDialogConfirm"
		items="{anlRbg>/data}" >
		
		<columns>
			<Column>
				<header>
					<Text text="{i18n>BUCHUNGSKREIS}" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>ID}" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>BEZEICHNUNG}" />
				</header>
			</Column>
		</columns>
		
		<ColumnListItem>
			<cells>
				<Text text="{anlRbg>bukrs}" />
				<Text text="{anlRbg>id}" />
				<Text text="{anlRbg>descr}" />
			</cells>
		</ColumnListItem>

	</TableSelectDialog>
</core:FragmentDefinition>