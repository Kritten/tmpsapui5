<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="ag.bpc.Deka.controller.Startseite">

	<Page title="{i18n>STARTSEITE}">
		
		<content>
	
			<TileContainer>
				
				<tiles>
					
					<StandardTile
						icon="sap-icon://collections-insight"
						title="{i18n>KONDITIONENEINIGUNG}"
						press="onKondTilePress"
						visible="false"
						id="idKonditioneneinigungTile" />

					<StandardTile
						icon="sap-icon://capital-projects"
						title="{i18n>VERMIETUNGSAKTIVITAET}"
						press="onVermTilePress"
						visible="false"
						id="idVermietungsaktivitaetTile" />

					<StandardTile
						icon="sap-icon://pause"
						title="{i18n>BUDGETSTOPP}"
						press="onBudsTilePress"
						visible="false"
						id="idBudgetstoppTile" />

					<StandardTile
						icon="sap-icon://locked"
						title="{i18n>EIGENE_SPERREN}"
						press="onSperTilePress"
						visible="false"
						id="idSperreTile" />

				</tiles>

			</TileContainer>
	
		</content>
		
	</Page>
</mvc:View>